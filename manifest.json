{
  "manifest_version": 3,
  "name": "Color Blind Adjuster",
  "version": "1.0",
  "description": "Adjusts webpage colors for different types of color blindness.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
